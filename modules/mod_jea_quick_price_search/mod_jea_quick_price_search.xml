<?xml version="1.0" encoding="UTF-8"?>
<install type="module" version="1.5">
	<name>JEA Quick Price Search</name>
	<author>Sylvain Philip</author>
	<creationDate>mars 2008</creationDate>
	<copyright>(C) 2008 PHILIP Sylvain. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>contact@sphilip.com</authorEmail>
	<authorUrl>www.sphilip.com</authorUrl>
	<version>1.2</version>
	<description>Mod quick price search. Customed by Chau Nguyen</description>
	<files>
		<filename module="mod_jea_search">mod_jea_quick_price_search.php</filename>
		<filename module="mod_jea_search">tmpl/default.php</filename>
	</files>
	<languages folder="languages">
	    <language tag="en-GB">en-GB.mod_jea_search.ini</language>
		<language tag="fr-FR">fr-FR.mod_jea_search.ini</language>
	</languages>
	<params>		
		<param name="stylePrice" type="radio" default="list" label="Style Price" description="Style Price">
			<option value="list">List checkbox</option>
			<option value="combo">Combobox</option>
		</param>
		<param name="colorText" type="text" default="" label="Color Text" description="Color of text"></param>
		<param name="colorLink" type="text" default="#fff" label="Color Link" description="Color of link"></param>
		<param name="priceTitles" type="text" default="" label="Price title" description="Price title. Format: title1|title2 ..."></param>
		<param name="priceValues" type="text" default="" label="Price value" description="Price value. Format: gia_tu1;gia_den1|gia_tu2;gia_den2 ..."></param>
		<param name="fontSize" type="text" default="12px" label="FontSize Area" description="FontSize Area"></param>
	</params>
</install>
