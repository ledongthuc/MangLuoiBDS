<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd">
<install type="module" version="1.5">
	<name>DesignPro.VN - Weather Gold Forex</name>
	<creationDate>April 2009</creationDate>
	<author>DesignPro</author>
	<authorEmail>hungvq@designpro.vn</authorEmail>
	<authorUrl>http://www.DesignPro.VN/</authorUrl>
	<copyright>Copyright (C) 2009 DesignPro.VN. All rights reserved.</copyright>
	<license>http://www.DesignPro.VN/</license>
	<version>1.5</version>
	<description>
		<![CDATA[
			<h3>DesignPro.VN - Weather Gold Forex</h3>
			<p>Version: <b>1.5</b></p>
			<p>Release date: <b>2009-04-13</b></p>
			<p>Homepage: <b><a href="http://www.DesignPro.VN/" title="Trang thông tin hội đồng hương Thái Bình..." target="_blank">http://www.DesignPro.VN/</a></b></p>
			<p>This module shows you the visitors of your site.</p>
			<h4>Features</h4>
			<ul>
				<li>Show Weather - Gold - Forex</li>
				</ul>
		]]>
	</description>
	<files>
		<filename module="mod_weather">mod_weather.php</filename>
		<filename module="mod_weather">helper.php</filename>
		<filename module="mod_weather">index.html</filename>
		<filename module="mod_weather">readme.html</filename>
		
		<filename module="mod_weather">tmpl/index.html</filename>
		<filename module="mod_weather">tmpl/default.php</filename>
		
		<filename module="mod_weather">scripts/index.html</filename>
		<filename module="mod_weather">scripts/Forex.js</filename>
		<filename module="mod_weather">scripts/Gold.js</filename>
		<filename module="mod_weather">scripts/Lib.js</filename>
		<filename module="mod_weather">scripts/Weather.js</filename>
		
		<filename module="mod_weather">images/index.html</filename>
		<filename module="mod_weather">images/goldIcon.gif</filename>
		<filename module="mod_weather">images/icon_stock.gif</filename>
		<filename module="mod_weather">images/partly.cloudy.gif</filename>
                <filename module="mod_weather">images/minus.gif</filename>
                <filename module="mod_weather">images/plus.gif</filename>
	</files>
	<params>
		<param name="cache" type="radio" default="0" label="Enable Cache" description="Select whether to cache the content of this module">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		
		<param name="@spacer" type="spacer" default="" label="" description="" />
					
		<param name="s_weather" type="radio" default="1" label="Show Weather" description="Show Today Weather">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="s_gold" type="radio" default="1" label="Show Gold" description="Show Today Gold">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param> 
		<param name="s_forex" type="radio" default="1" label="Show Forex" description="Show Today Forex">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param> 
		<param name="widthtable" type="list" default="90" label="Width Table" description="The width (%) of statistics table">
			<option value="100">100%</option>
			<option value="95">95%</option>
			<option value="90">90%</option>
			<option value="85">85%</option>
			<option value="80">80%</option>
			<option value="75">75%</option>
			<option value="70">70%</option>
			<option value="65">65%</option>
			<option value="60">60%</option>
			<option value="55">55%</option>
			<option value="50">50%</option>
		</param>
		<param name="pretext" type="textarea" cols="20" rows="5" default="" label="Pre-text" description="The text or HTML displays at the top of this module"/>
		<param name="posttext" type="textarea" cols="20" rows="5" default="" label="Post-text" description="The text or HTML displays at the end of this module"/>
	</params>
</install>